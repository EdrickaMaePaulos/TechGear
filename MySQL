                driver = mysql::get_mysql_driver_instance();
                conn.reset(driver->connect("tcp://localhost:3306", "root", " ")); // Replace with actual host, username, and password
                conn->setSchema("techgear"); // Replace with actual database name

                switch (choice) {
                case 1:
                    cout << "               ==============================================================================" << endl;
                    cout << "                                               I N V E N T O R Y" << endl;
                    cout << "               ==============================================================================" << endl << endl;
