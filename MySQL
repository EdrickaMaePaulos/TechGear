                    double price;
                    cout << "Enter item name: ";
                    cin >> item_name;
                    cout << "Enter quantity: ";
                    cin >> quantity;
                    cout << "Enter price: ";
                    cin >> price;
                    inventoryManager.add_item(conn.get(), item_name, quantity, price);
                    break;
